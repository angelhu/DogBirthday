@model DogBirthday.Models.Dog

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DogID)

        <div class="form-group">
            @Html.LabelFor(model => model.DogName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.DogName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DogName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DogGender, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EnumDropDownListFor(model => model.DogGender, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DogGender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BreedID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3" id="DogBreedDropdown">
                <div class="input-group">
                @Html.DropDownList("BreedID", null, htmlAttributes: new { @class = "form-control" })
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="ShowNewDescriptionFormButton">
                            <icon class="glyphicon glyphicon-plus"></icon>
                        </button>
                        </span>
                    </div>
                @Html.ValidationMessageFor(model => model.BreedID, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3" id="NewDogBreedForm">
                <div class="input-group">
                    <input type="text" id="NewDogBreedDescription" class="form-control" placeholder="New breed..." />
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="NewDogBreedOkButton"><icon class="glyphicon glyphicon-ok"></icon></button>
                        <button class="btn btn-default" id="NewDogBreedCancelButton"><icon class="glyphicon glyphicon-remove"></icon></button>
                    </span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Owner, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.Owner, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Owner, "", new { @class = "text-danger" })
            </div>
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/AddNewDogBreeds.js"></script>
}
